{
    "version": 2,
    "builds": [
    {
      "src": "arda_website/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.12",
        "excludeFiles": ["venv/**", "__pycache__/**"]
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
    ],
    "routes": [
    {
        "src": "/static/(.*)",
        "dest": "/static/$1"
    },
    {
        "src": "/(.*)",
        "dest": "arda_website/wsgi.py"
    }
    ],
    "functions": {
      "arda_website/wsgi.py": {
        "memory": 1024,
        "maxDuration": 10
      }
    }
}
